  <div class="col-1" >
   <label>#CK</label></div>
   <div class="col-5 ">
   <input
        id="ck"
        class="input-group mb-3 col align-self-end bg-dark text-white"
        type="text"
        name="ck"
        placeholder="Title"
      
      /></div></div>
{{! Input nombre/apellido }}
      <div class="row justify-content-start">
  <div class="col-2">
   <label>Nombres</label></div>
   <div class="col-4">
   <input
        id="nombre"
        class="input-group mb-3 col align-self-end bg-dark text-white"
        type="text"
        name="nombre"
        placeholder="Title"
      
      /></div>

       <div class="col-2">
   <label>Apellidos</label></div>
   <div class="col-4">
   <input
